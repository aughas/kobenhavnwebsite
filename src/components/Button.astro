---
const { variant = "primary", size = "medium" } = Astro.props;
const buttonStyling = "text-white  font-bold py-3 px-6 rounded-xl transition ease-in-out";
const variantClasses = {
    "primary": "bg-red-600 hover:bg-transparent hover:text-red-600",
    "secondary": "bg-lime-400 hover:bg-green-800"
};

const sizeClasses = {
    "large": "text-4xl",
    "medium":"text-2xl",
    "small":"text-xl"
};
---
<div>
    <button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot /></button>
</div>